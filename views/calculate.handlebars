<div class="feeding-calculator-wrapper">
    {{#if horse_ration}}
        <form class="form-feed" onsubmit="event.preventDefault(); get_profile();" action="/calculate/{{name}}?rid={{ration_id}}" method="POST">
    {{else}}
        <form class="form-feed" onsubmit="event.preventDefault(); get_profile();" action="/calculate/{{name}}" method="POST">
    {{/if}}
        <div class="feeding-calculator-flex-wrap">
            <div class="calculator-labels">
                <label>Antal kg</label>
                <label>TS <span>%</span></label>
                <label>MJ / kg</label>
                <label>gr smrp / kg</label>
                <label>Ca <span>(g)</span></label>
                <label>p <span>(g)</span></label>
                <label>mg <span>(g)</span></label>
                <label>selen <span>(mg)</span></label>
            </div>
                {{#if horse_ration}}
                    {{#each horse_ration as |ration i|}}
                        <div class="feed-row feed-row-{{@index}}">
                            <input name="amount" step="0.01" class="form-feed-input input-amount" type="number" placeholder="" value="{{ration.amount}}">
                            <input name="solids" step="0.01" class="form-feed-input input-solids" type="number" placeholder="" value="{{ration.ts}}">
                            <input name="mj" step="0.01" class="form-feed-input input-mj" type="number" placeholder="" value="{{ration.mj}}">
                            <input name="smrp" step="0.01" class="form-feed-input input-smrp" type="number" placeholder="" value="{{ration.smrp}}">
                            <input name="ca" step="0.01" class="form-feed-input input-ca" type="number" placeholder="" value="{{ration.ca}}">
                            <input name="p" step="0.01" class="form-feed-input input-p" type="number" placeholder="" value="{{ration.p}}">
                            <input name="mg" step="0.01" class="form-feed-input input-mg" type="number" placeholder="" value="{{ration.mg}}">
                            <input name="selenium" step="0.01" class="form-feed-input input-selen" type="number" placeholder="" value="{{ration.selenium}}">
                        </div>
                    {{/each}}
                {{else}}
            <div class="feed-row feed-row-1">
                    <input name="amount" step="0.01" class="form-feed-input input-amount" type="number" placeholder="">
                    <input name="solids" step="0.01" class="form-feed-input input-solids" type="number" placeholder="">
                    <input name="mj" step="0.01" class="form-feed-input input-mj" type="number" placeholder="">
                    <input name="smrp" step="0.01" class="form-feed-input input-smrp" type="number" placeholder="">
                    <input name="ca" step="0.01" class="form-feed-input input-ca" type="number" placeholder="">
                    <input name="p" step="0.01" class="form-feed-input input-p" type="number" placeholder="">
                    <input name="mg" step="0.01" class="form-feed-input input-mg" type="number" placeholder="">
                    <input name="selenium" step="0.01" class="form-feed-input input-selen" type="number" placeholder="">
            </div>
                {{/if}}
        </div>
        <div class="add-row"><span>Lägg till rad</span>+</div>
        <input class="form-feed-submit" type="submit" value="Beräkna">
    </form>
</div>
<button id="save-calculation">Spara Beräkning för {{name}}</button>

<script type="text/javascript" src="/scripts/main.js"></script>
{{#if horse_ration}}
    <script>get_profile()</script>
{{/if}}
</div>