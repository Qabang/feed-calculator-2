<div class="wrapper">

<div class="banner calculator-banner">
        <h2>Beräkna foderstat</h2>
</div>  

<div class="profile-wrapper profile-card profile-card-no-border">
    <section>
        <h2 class="profile-name">{{ name }}</h2>
        <p>Född: <span class="profile-born">{{born}}</span></p>
        <p>Kön:<span class="profile-gender">{{gender}}</span></p>
    </section>
    <section>
        <p class="h2">Status</p>
        <p>Hull: <span  class="profile-look">{{look}}</span></p>
        <p>Vikt: <span class="profile-weight">{{weight}}</span>kg</p>
        <p>Typ: <span class="profile-type">{{type}}</span></p>
    </section>
    <section>
        <p class="h2">Arbete</p>
        <p class="profile-walk">Skritt: 
            {{#if walk }}
                {{walk}}
            {{else}}
                0
            {{/if}}
         min
        </p>
        <p class="profile-trot-canter">Trav / Galopp:
            {{#if trotCanter }}
                {{trotCanter}}
            {{else}}
                0
            {{/if}}
         min
        </p>
    </section>
</div>
